---
// Component Imports
import Home from '../layouts/Home.astro';
import BlogTitle from '../components/BlogTitle.astro';
import PageTitleForMobile from '../components/PageTitleForMobile.astro';

// Data Fetching: List all Markdown posts in the repo.
export interface MarkdownFrontmatter {
	date: number;
}

let allBlogs = await Astro.glob<MarkdownFrontmatter>('./blog/*.md');
allBlogs = allBlogs.sort((a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf());
---

<Home isIndexPage={true}>
	<PageTitleForMobile title="Blogs" />
	{
		allBlogs.map((blog) => {
			return <BlogTitle blog={blog} /> 
		})
	}
</Home>